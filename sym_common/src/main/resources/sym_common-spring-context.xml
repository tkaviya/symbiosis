<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="classpath:/properties-config.xml"/>

    <bean id="configurationEngine" name="configurationEngine" factory-method="getInstance"
          class="net.blaklizt.symbiosis.sym_common.ConfigurationEngine">
        <property name="coreManagerName" value="#{symbiosisProperties.coreManagerName}"/>
        <property name="masterName" value="#{symbiosisProperties.masterName}"/>
        <property name="bluetoothProximityRange" value="#{symbiosisProperties.bluetoothProximityRange}"/>
        <property name="bluetoothMasterMac" value="#{symbiosisProperties.bluetoothMasterMac}"/>
        <property name="bluetoothPollPeriod" value="#{symbiosisProperties.bluetoothPollPeriod}"/>
        <property name="bluetoothProximityAutostart" value="#{symbiosisProperties.bluetoothProximityAutostart}"/>
    </bean>

</beans>