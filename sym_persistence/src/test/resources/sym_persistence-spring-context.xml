<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:sym_common-spring-context.xml" />

    <context:annotation-config />
    <context:component-scan base-package="net.blaklizt.symbiosis.sym_persistence" />

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:properties/database.properties"/>
    </bean>

    <!--<bean id="symbiosisDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">-->
        <!--<property name="jndiName" value="java:jboss/datasources/symbiosis"/>-->
    <!--</bean>-->

    <bean id="symbiosisDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <!--<property name="driverClassName" value="${hibernate.connection.driver_class}" />-->
        <!--<property name="url" value="${hibernate.connection.url}" />-->
        <!--<property name="username" value="${hibernate.connection.username}" />-->
        <!--<property name="password" value="${hibernate.connection.password}" />-->
    </bean>

    <bean id="symbiosisSessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="annotatedClasses">
            <list>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.AbstractDao</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisAuthUserDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisEventLogDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisRoleDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisUserDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisUserGroupSystemRoleDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisAuthUser</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisChannel</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisCountry</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisEventLog</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisEventType</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisLanguage</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisRole</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisSystem</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUser</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroup</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroupSystemRole</value>
                <!--<value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroupSystemRolePK</value>-->
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserStatus</value>
            </list>
        </property>

        <property name="dataSource" ref="symbiosisDataSource"/>
        <!--<property name="mappingLocations">-->
            <!--<list>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisChannel.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisCountry.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisEventLog.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisEventType.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisLanguage.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisRole.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisSystem.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisUser.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisUserGroup.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisUserGroupSystemRole.hbm.xml</value>-->
                <!--<value>classpath:net/blaklizt/symbiosis/sym_persistence/SymbiosisUserStatus.hbm.xml</value>-->
            <!--</list>-->
        <!--</property>-->
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.connection.url">${hibernate.connection.url}</prop>
                <prop key="hibernate.connection.driver_class">${hibernate.connection.driver_class}</prop>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                <prop key="hibernate.connection.username">${hibernate.connection.username}</prop>
                <prop key="hibernate.connection.password">${hibernate.connection.password}</prop>

            </props>
        </property>

        <!--<property name="mappingResources">-->
            <!--<list>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/EventLog.hbm.xml</value>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/Role.hbm.xml</value>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/SymbiosisUser.hbm.xml</value>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/UserAttribute.hbm.xml</value>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/UserGroup.hbm.xml</value>-->
                <!--<value>net/blaklizt/symbiosis/sym_persistence/UserGroupRole.hbm.xml</value>-->
            <!--</list>-->
        <!--</property>-->
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="dataSource" ref="symbiosisDataSource"/>
        <property name="sessionFactory" ref="symbiosisSessionFactory"/>
    </bean>

</beans>