<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:sym_common-spring-context.xml" />

    <context:annotation-config />
    <context:component-scan base-package="net.blaklizt.symbiosis.sym_persistence" />
    <context:component-scan base-package="net.blaklizt.symbiosis.sym_persistence.dao" />
    <context:component-scan base-package="net.blaklizt.symbiosis.sym_persistence.dao.impl" />

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:properties/database.properties"/>
    </bean>

    <!--<bean id="symbiosisDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">-->
        <!--<property name="jndiName" value="java:jboss/datasources/symbiosis"/>-->
    <!--</bean>-->

    <bean id="symbiosisDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${hibernate.connection.driver_class}" />
        <property name="url" value="${hibernate.connection.url}" />
        <property name="username" value="${hibernate.connection.username}" />
        <property name="password" value="${hibernate.connection.password}" />
    </bean>

    <bean id="symbiosisSessionFactory" name="" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="annotatedClasses">
            <list>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.AbstractDao</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisAuthUserDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisEventLogDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisRoleDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisUserDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.dao.impl.SymbiosisUserGroupSystemRoleDaoImpl</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisAuthUser</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisChannel</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisCountry</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisEventLog</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisEventType</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisLanguage</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisRole</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisSystem</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUser</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroup</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroupSystemRole</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserGroupSystemRolePK</value>
                <value>net.blaklizt.symbiosis.sym_persistence.SymbiosisUserStatus</value>
            </list>
        </property>

        <property name="dataSource" ref="symbiosisDataSource"/>

    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="dataSource" ref="symbiosisDataSource"/>
        <property name="sessionFactory" ref="symbiosisSessionFactory"/>
    </bean>

</beans>